<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-include="true" default-menu-index="2">

    <transition name="findAsset"><default-response url="../FindAsset"/></transition>
    <transition name="editProduct"><default-response url="//${appRoot}/Catalog/Product/EditProduct"/></transition>
    <transition name="editFacility"><default-response url="//${appRoot}/Facility/EditFacility"/></transition>

    <transition-include name="getPartyList" location="component://SimpleScreens/template/party/PartyForms.xml"/>
    <transition-include name="getProductList" location="component://SimpleScreens/template/product/ProductTransitions.xml"/>
    <transition-include name="getLotList" location="component://SimpleScreens/template/product/ProductTransitions.xml"/>

    <actions>
        <entity-find entity-name="mantle.facility.Facility" list="facilityList">
            <econdition field-name="facilityTypeEnumId" value="FcTpWarehouse"/><order-by field-name="facilityName"/></entity-find>
    </actions>
    <widgets>
        <link url="findAsset" text="Find Individual Assets"/>
        <link url="../SelectAsset" text="Move Asset"/>

        <form-list name="ListAssets" list="assetList" skip-form="true" header-dialog="true" saved-finds="true" select-columns="true" show-csv-button="true">
            <entity-find entity-name="mantle.product.asset.AssetSummaryView" list="assetList">
                <search-form-inputs default-order-by="productName"/>
                <select-field field-name="pseudoId,amountUomId"/>
            </entity-find>
            <row-actions>
                <entity-find-one entity-name="mantle.facility.FacilityLocation" value-field="facLoc" cache="true"/>
            </row-actions>

            <field name="productId">
                <header-field title="Product" show-order-by="case-insensitive">
                    <text-line ac-transition="getProductList" ac-min-length="2" size="50"/>
                </header-field>
                <default-field><link url="editProduct" text="${pseudoId}" link-type="anchor"/></default-field>
            </field>
            <field name="productName">
                <header-field show-order-by="case-insensitive"><text-find size="15" hide-options="true"/></header-field>
                <default-field><display/></default-field></field>

            <field name="assetTypeEnumId">
                <header-field title="Asset Type" show-order-by="true">
                    <widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#enumDropDown">
                        <set field="enumTypeId" value="AssetType"/><set field="allowMultiple" value="true"/>
                        <set field="allowEmpty" value="true"/></widget-template-include>
                </header-field>
                <default-field><display-entity entity-name="moqui.basic.Enumeration"/></default-field>
            </field>
            <field name="classEnumId">
                <header-field title="Asset Class" show-order-by="true">
                    <widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#enumDropDown">
                        <set field="enumTypeId" value="AssetClass"/><set field="allowMultiple" value="true"/>
                        <set field="allowEmpty" value="true"/></widget-template-include>
                </header-field>
                <default-field><display-entity entity-name="moqui.basic.Enumeration"/></default-field>
            </field>
            <field name="statusId">
                <header-field title="Status" show-order-by="true">
                    <widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#statusDropDown">
                        <set field="statusTypeId" value="Asset"/><set field="allowMultiple" value="true"/>
                        <set field="allowEmpty" value="true"/></widget-template-include>
                </header-field>
                <default-field><display-entity entity-name="moqui.basic.StatusItem"/></default-field>
            </field>

            <field name="facilityId"><header-field title="Facility" show-order-by="case-insensitive">
                <drop-down allow-empty="true"><list-options list="facilityList" key="${facilityId}" text="FacilityNameTemplate"/></drop-down>
            </header-field><default-field>
                <link url="editFacility" entity-name="mantle.facility.Facility" text="FacilityNameTemplate" link-type="anchor"
                      parameter-map="[facilityId:facilityId]"/>
            </default-field></field>
            <field name="locationSeqId">
                <header-field title="Location" show-order-by="case-insensitive"><text-find size="15" hide-options="true"/></header-field>
                <default-field><label condition="locationSeqId" text-map="facLoc" text="FacilityLocationNameTemplate"/></default-field>
            </field>
            <field name="lotId"><header-field title="Lot"><text-line ac-transition="getLotList" size="50"/></header-field>
                <default-field><display-entity entity-name="mantle.product.asset.LotAndMfgParty" text="LotNameTemplate"/></default-field>
            </field>

            <field name="availableToPromiseTotal" align="right"><header-field title="ATP Total" show-order-by="true"/>
                <default-field><display/></default-field></field>
            <field name="quantityOnHandTotal" align="right"><header-field title="QOH Total" show-order-by="true"/>
                <default-field><display/></default-field></field>
            <field name="amountUomId"><header-field title="UOM"/>
                <default-field><display-entity entity-name="moqui.basic.Uom" default-text="each"/></default-field>
            </field>

            <field name="physicalQuantity"><default-field title="">
                <dynamic-dialog id="PhysicalQuantityDialog" button-text="Physical Quantity" transition="PhysicalQuantity" width="800"/>
            </default-field></field>
            <field name="physicalChange"><default-field title="">
                <dynamic-dialog id="PhysicalChange" button-text="Physical Diff" transition="PhysicalChange" width="800"/>
            </default-field></field>

            <field name="submitButton">
                <header-field title="Find"><submit/></header-field>
                <default-field><link url="findAsset" text="Assets" parameter-map="[pseudoId:pseudoId, statusId:statusId,
                            facilityId:facilityId, locationSeqId:locationSeqId]"/></default-field>
            </field>

            <form-list-column><field-ref name="submitButton"/></form-list-column>
            <form-list-column><field-ref name="productId"/><field-ref name="productName"/></form-list-column>
            <form-list-column><field-ref name="assetTypeEnumId"/><field-ref name="classEnumId"/><field-ref name="statusId"/></form-list-column>
            <form-list-column><field-ref name="facilityId"/><field-ref name="locationSeqId"/><field-ref name="lotId"/></form-list-column>
            <form-list-column><field-ref name="quantityOnHandTotal"/><field-ref name="availableToPromiseTotal"/><field-ref name="amountUomId"/></form-list-column>
            <form-list-column><field-ref name="physicalQuantity"/><field-ref name="physicalChange"/></form-list-column>
        </form-list>
    </widgets>
</screen>
